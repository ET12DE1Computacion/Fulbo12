@using Fulbo12.Core;
@model Pais;
@{
    ViewData["Title"] = "Pais";
}
<form asp-controller="Pais" asp-action="Upsert" method="post">
    <div asp-validation-summary="All"></div>
    <div><input type="hidden" asp-for="@Model.Id" /></div>
    <div class="row g-3 align-items-center">
        <div class="col-auto">
            <label asp-for="Nombre" class="col-form-label">Nombre</label>
        </div>
        <div class="col-auto">
            <input asp-for="Nombre" class="form-control" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Alta Categoria</button>
        </div>
    </div>    
</form>
