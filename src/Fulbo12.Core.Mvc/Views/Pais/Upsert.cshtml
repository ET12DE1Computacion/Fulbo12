@using Fulbo12.Core;
@model Pais;
@{
    var texto = Model is null ? "Alta Pais" : "Modificar Pais";
    ViewData["Title"] = texto;
}

<head>
    <script type="text/javascript" src="site.js"></script>
    <script type="text/css" src="site.css"></script>
</head>
<form asp-controller="Pais" asp-action="Upsert" method="post">
    <div asp-validation-summary="All"></div>
    <div><input type="hidden" asp-for="@Model.Id" /></div>
    <div class="row g-3 align-items-center">
        <div class="col-auto">
            <label asp-for="Nombre" class="col-form-label">Nombre</label>
        </div>
        <div class="col-auto">
            <input asp-for="Nombre" class="form-control" />
        </div>
    </div>
    <div class="row g-3 align-items-center">
        <div class="col-auto">
            <label asp-for="Abreviatura" class="col-form-label">Abreviatura</label>
        </div>
        <div class="col-auto">
            <input id="abreviatura" asp-for="Abreviatura" class="form-control" />
        </div>
        <div class="col-auto">
            <button class="btn btn-primary" type="button" onclick="mostrar('bandera', 'abreviatura')">
                Previsualizaci√≥n <i class="bi bi-eye"></i>
            </button>
        </div>
    </div>
    <br>
    <div class="container">
        <div class="row align-items-center">
            <div class="col-12 col-md-6">
                <img class="img-fluid border border-dark" id="bandera" alt="">
            </div>
        </div>
        <br>
        <div class="row g-3 align-items-center">
            <div class="col-auto">
                @if (Model is null)
                {
                    <button type="submit" class="btn btn-primary">@texto</button>
                }
                else
                {
                    <button type="submit" class="btn btn-warning">@texto</button>
                }
            </div>
        </div>
    </div>
</form>
