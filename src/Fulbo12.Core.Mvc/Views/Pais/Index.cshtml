@using Fulbo12.Core;
@model IEnumerable<Pais>
@{
    ViewData["Title"] = "Pais";
}

@if (Model.Count() != 0)
{
    <h3>Paises</h3>
    @foreach (var pais in Model)
    {
        <ol><a asp-action="Modificar" asp-route-Id="@pais.Id">@pais.Nombre</a></ol>
    }
}
else
{
    <p>No hay paises cargados.</p>
}