@using Fulbo12.Core;
@model IEnumerable<PersonaJuego>

@if (Model is null)
{
    <p>No hay personas cargadas.</p>
}
@if (Model.Count() == 0)
{

}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Apellido</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody class="">
            @foreach (var persona in Model)
            {
                <tr>
                    <th scope="row">@persona.Nombre</th>
                    <td>@persona.Apellido</td>
                    <td><a asp-action="Detalle" asp-route-Id="@persona.Id">Detalle</a></td>
                </tr>
            }
        </tbody>
    </table>
}