@using Fulbo12.Core;
@model IEnumerable<PersonaJuego>;
@{
    ViewData["Title"] = "Persona";
}

@if (Model.Count() != 0)
{
    <h3>Personas</h3>
    <br><br>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col" colspan="2">Acciones</th>
            </tr>
        </thead>
        <tbody class="">
            @foreach (var persona in Model)
            {
                <tr>
                    <th scope="row"><a asp-action="Detalle" asp-route-Id="@persona.Id">@persona.Nombre</a></th>
                </tr>
            }
        </tbody>
    </table>
    
}
else
{
    <p>No hay personas cargadas.</p>
}