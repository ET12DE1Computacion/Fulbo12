@using Fulbo12.Core.Futbol;
@model IEnumerable<Futbolista>;
@{
    ViewData["Title"] = "futbolista";
}

@if (Model.Count() != 0)
{
    <h3>Futbolistas</h3>
    <br>

    <br>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col" colspan="2">Acciones</th>
            </tr>
        </thead>
        <tbody class="">
            @foreach (var futbolista in Model)
            {
                <tr>
                    <th scope="row"><a asp-action="Detalle"
                            asp-route-Id="@futbolista.Id">@string.Concat(futbolista.Persona.Nombre, '(',
                    futbolista.Persona.Pais.Nombre, ')')</a></th>
                    <td><a asp-action="Detalle" asp-route-Id="@futbolista.Id">Detalle <i class="bi bi-eyeglasses"
                                style="color: black;"></i></a></td>
                    <td><a asp-action="Modificar" asp-route-Id="@futbolista.Id">Modificar <i class="bi bi-pencil-fill"
                                style="color: black;"></i></a></td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <p>No hay ligas cargadas.</p>
}