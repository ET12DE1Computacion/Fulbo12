@using Fulbo12.Core.Futbol;
@model IEnumerable<Liga>;
@{
    ViewData["Title"] = "Liga";
}

@if (Model.Count() != 0)
{
    <h3>Ligas</h3>
    @foreach (var liga in Model)
    {
        <ol><a asp-action="Modificar" asp-route-Id="@liga.Id">@liga.Nombre</a></ol>
    }
}
else
{
    <p>No hay ligas cargados.</p>
}