@using Fulbo12.Core.Futbol;
@model IEnumerable<TipoFutbolista>
@{
    ViewData["Title"] = "Listado";
}

@if (Model.Count() != 0)
{
    <h3>Tipos de Futbolistas</h3>
    <br><br>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col" colspan="2">Acciones</th>
            </tr>
        </thead>
        <tbody class="">
            @foreach (var tipoFutbolista in Model)
            {
                <tr>
                    <th scope="row">
                        <a asp-action="Detalle" asp-route-Id="@tipoFutbolista.Id">@tipoFutbolista.Nombre</a>
                    </th>
                    <td><a asp-action="Detalle" asp-route-Id="@tipoFutbolista.Id">Detalle <i class="bi bi-eyeglasses"
                        style="color: black;"></i></a></td>
                    <td><a asp-action="Modificar" asp-route-Id="@tipoFutbolista.Id">Modificar <i class="bi bi-pencil-fill"
                        style="color: black;"></i></a></td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <p>No hay ligas cargadas.</p>
}